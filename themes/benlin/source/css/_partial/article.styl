.article
  padding-bottom: 90px

.article-header
  text-align: center

.article-title
  font-size: font-size-h1
  color: color-default
  text-decoration: none
  line-height: line-height-h1
  font-weight: bolder
  display: block

.article-header-divider
  background: color-meta
  width: 20px
  height: 1px
  margin: 20px auto

.article-date
  color: color-meta
  font-size: font-size-meta
  text-decoration: none
  line-height: 20px
  &:before
    content: ""
    image: "images/bg-icon-date.png" 12px 12px
    width: 12px
    height: 12px
    display: inline-block
    margin-right: 4px

.article-share
  display: inline-block
  padding-left: 15px
  .fb-like
    display: inline-block !important
    width: auto !important
  .twitter-tweet-button
    position: relative
    top: 4px
    padding-left: 6px

.article-footer
  border-top: 1px solid color-border
  text-align: center
  margin-top: 80px
  .article-share
    padding-top: 20px

.article-entry
  color: color-default
  font-weight: 300
  line-height: 36px
  p
    margin: 40px 0
  a
    color: color-highlight
    font-weight: normal
    text-decoration: none
    border-bottom: 1px solid color-highlight
    &:visited
      color: color-visited
      border-bottom-color: color-visited
    &:hover
      color: color-highlight
      border-bottom: 2px solid color-highlight
  ul
    list-style: disc
    margin-left: 20px
  ol
    list-style: decimal
    margin-left: 25px
  strong
    font-weight: bold
  em
    font-style: italic
  hr
    border: none
    border-top: 1px solid color-border
  h1, h2, h3, h4, h5, h6
    margin: 45px 0 20px
  h1
    font-size: font-size-h1
    line-height: line-height-h1
    font-weight: bolder
  h2
    font-size: font-size-h2
    line-height: line-height-h2
    font-weight: bolder
  h3
    font-size: font-size-h3
    line-height: line-height-h3
    font-weight: bolder
  strong
    font-weight: bold
  em, cite
    font-style: italic
  sup, sub
    font-size: 0.75em
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5em
  sub
    bottom: -0.2em
  small
    font-size: 0.85em
  acronym, abbr
    border-bottom: 1px dotted
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0
  .caption
    font-style: italic
    font-weight: normal
    line-height: 20px
    text-align: center
    display: block
    margin-top: 10px
  img
    display: block
    margin: 0 auto
  blockquote
    font-style: italic
    font-size: 20px
    line-height: 30px
    font-weight: bolder
    color: color-highlight
    position: relative
    margin-top: 80px
    background-repeat: no-repeat
    > p:first-child
      margin-top: 0
    footer
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
    @media mq-normal
      margin-top: 90px 0
      font-size: 25px
      line-height: 36px
    &:before
      content: ""
      width: 40px
      height: 35px
      position: absolute
      top: -45px
      left: 0
      image: "images/bg-bg-quote.png" 100%
      @media mq-normal
        width: 50px
        height: 44px
        left: -28px
        top: -30px
  img, video
    max-width: 100%