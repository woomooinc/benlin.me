.archives
  padding-bottom: 75px

.archive-wrap
  padding-top: 11px
  @media mq-normal
    padding-top: 50px

.archive
  border-bottom: 3px dotted #d0d0d0
  position: relative
  @media mq-normal
    margin: 26px 0

.archive-title
  font-size: 20px
  color: color-default
  line-height: 30px
  font-weight: 500
  text-decoration: none
  margin: 15px 75px 15px 0
  display: block
  overflow: hidden
  height: @line-height
  white-space: nowrap
  text-overflow: ellipsis
  @media mq-normal
    background: color-background
    padding-right: 30px
    font-size: 35px
    line-height: 55px
    height: @line-height
    position: absolute
    left: 0
    top: -43px
    max-width: 435px

.archive-date
  color: #b9b9b9
  text-decoration: none
  font-size: 12px
  position: absolute
  right: 0
  bottom: 22px
  @media mq-normal
    background: color-background
    padding-left: 12px
    bottom: -10px
    right: -1px
    &:before
      content: ""
      image: "images/bg-icon-date.png" 12px 12px
      width: 12px
      height: 12px
      display: inline-block
      margin-right: 4px

#page-nav
  clearfix()
  border-top: 1px solid color-border

.page-nav-link
  color: color-meta
  line-height: 50px
  &:hover
    color: color-highlight

.footer-share
  text-align: center
  padding: 20px 0 80px
  border-top: 1px solid color-border