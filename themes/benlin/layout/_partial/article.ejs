<div class="article article-type-<%= post.layout %>" itemscope itemprop="blogPost">
  <div class="article-header">
    <%- partial('post/title', {class_name: 'article-title'}) %>
    <div class="article-header-divider"></div>
    <%- partial('post/date', {class_name: 'article-date'}) %>
    <%- partial('post/share') %>
  </div>
  <div class="article-entry" itemprop="articleBody">
    <% if (index && post.excerpt){ %>
      <%- post.excerpt %>
      <% if (theme.excerpt_link){ %>
        <p class="article-more-link">
          <a href="<%- config.root %><%- post.path %>#more">Read more</a>
        </p>
      <% } %>
    <% } else { %>
      <%- post.content %>
    <% } %>
  </div>
  <div class="article-footer">
    <%- partial('post/share') %>
  </div>
</div>

<% if (!index && post.comments && config.disqus_shortname){ %>
<section id="comments">
  <div id="disqus_thread">
    <noscript>Please enable JavaScript to view the <a href="//disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
  </div>
</section>
<% } %>